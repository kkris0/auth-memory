{
    "manifest_version": 3,
    "name": "AuthMemory: Which Account?",
    "version": "1.0.0",
    "description": "Remembers which Google Account you used for specific services and highlights it.",
    "permissions": ["storage"],
    "host_permissions": [
      "https://accounts.google.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://accounts.google.com/*"],
        "js": ["src/content.js"],
        "css": ["src/styles.css"],
        "run_at": "document_end"
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "src/content.js"
    }
}
